#include <stdio.h>
int main(){
    float dataGB, rate, totalBill;
    int customerType;
    
    printf("enter Data Usage (GB): ");
    scanf("%f", &dataGB);
    printf("enter Customer Type (1 for prepaid, 2 for postpaid): ");
    scanf("%d", &customerType);

    if(dataGB <= 2){
       rate = 50;
    }
    else if(dataGB > 2 && dataGB <= 10){
        if(customerType == 1){
            rate = 40;
        }
        else if(customerType == 2){
            rate = 35;
        }
    }
    else{
        rate = 25;
    }
    totalBill = dataGB *rate;
    printf("total bill = R. %.2f\n", totalBill);
    return 0;

}
